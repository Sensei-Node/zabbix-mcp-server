{
  "mcpServers": {
    "zabbix": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/path/to/zabbix-mcp-server",
        "python",
        "src/zabbix_mcp_server.py"
      ],
      "env": {
        "ZABBIX_URL": "https://zabbix.example.com/api_jsonrpc.php",
        "ZABBIX_TOKEN": "<your_api_token>",
        "READ_ONLY": "false"
      }
    }
  }
}